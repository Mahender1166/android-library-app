<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="60dp"
    android:background="@drawable/back_ground"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="330dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="50dp"
        android:textStyle="bold"
        android:text="Person Name" />

    <EditText
        android:id="@+id/dpt_admin_nameET"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/edit_text_back_ground"
        android:paddingLeft="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="15dp"
        android:ems="10"
        android:hint="Enter the name of the person"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        android:textStyle="bold"
        android:text="#919 Number" />

    <EditText
        android:id="@+id/dpt_admin_919ET"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/edit_text_back_ground"
        android:paddingLeft="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="15dp"
        android:ems="10"
        android:hint="Enter 919 number "
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        android:textStyle="bold"
        android:text="Department Name" />

    <EditText
        android:id="@+id/assigned_dptET"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/edit_text_back_ground"
        android:paddingLeft="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="15dp"
        android:ems="10"
        android:hint="Enter depertment name"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        android:textStyle="bold"
        android:text="Email ID" />

    <EditText
        android:id="@+id/dpt_admin_emailET"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/edit_text_back_ground"
        android:paddingLeft="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="15dp"
        android:ems="10"
        android:hint="Enter EmailID"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        android:textStyle="bold"
        android:text="Department Name" />

    <EditText
        android:id="@+id/dpt_admin_mobileET"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/edit_text_back_ground"
        android:paddingLeft="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="15dp"
        android:ems="10"
        android:hint="Enter Contact number"
        android:inputType="phone" />

    <Button
        android:id="@+id/add_dpt_adminBTN"
        android:layout_width="350dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        android:textColor="@color/white"
        android:background="@drawable/button_back_ground"
        android:text="Add Department Admin" />


</LinearLayout>