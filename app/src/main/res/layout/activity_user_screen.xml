<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_ground"
        android:gravity="center"
        android:orientation="vertical">

    <TextView
        android:id="@+id/user_headingTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Screen"
        android:layout_margin="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="italic|bold"/>

    <Button
        android:id="@+id/user_listBTN"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/edit_text_back_ground"
        android:text="List all Books"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/user_profileBTN"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/edit_text_back_ground"
        android:text="User Profile"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/user_settingsBTN"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/edit_text_back_ground"
        android:text="Settings"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/user_borrowBooksBTN"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/edit_text_back_ground"
        android:text="View Books Borrowed"
        android:textColor="@android:color/white"
        android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>