<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_ground"
    tools:context=".UserScreen">

    <TextView
        android:id="@+id/user_headingTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="User Home Screen"
        android:textSize="30dp"
        android:textStyle="italic|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.445"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.278" />

    <GridLayout
        android:layout_width="320dp"
        android:layout_height="170dp"
        android:columnCount="2"
        android:gravity="center"
        android:rowCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <Button
            android:id="@+id/user_borrowBooksBTN"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="5dp"
            android:background="@drawable/edit_text_back_ground"
            android:text=" Books Borrowed"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/search_bookBTN"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:background="@drawable/edit_text_back_ground"
            android:text="Search Book"
            android:textColor="@android:color/white"
            android:textStyle="bold" />


        <Button
            android:id="@+id/user_profileBTN"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:background="@drawable/edit_text_back_ground"
            android:text="User Profile"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/user_settingsBTN"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="5dp"
            android:background="@drawable/edit_text_back_ground"
            android:text="Settings"
            android:textColor="@android:color/white"
            android:textStyle="bold" />


    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>